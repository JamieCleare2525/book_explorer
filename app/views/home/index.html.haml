.row
  .col-6
    .card.ml-5.mt-4
      .card-body
        .row
          .col-12
            = form_tag(file_uploads_path, multipart: true) do
              .row
                .col-12
                  %h4 Upload CSV
                  .custom-file
                    = file_field_tag :file, accept: 'text/csv'

              .row
                .col-12
                  .text-center.pt-3
                    = submit_tag "Upload", class: "btn btn-primary"

  .col-6
    .card.mr-5.mt-4
      .card-body
        %h4 Review Uploads
        %table.table.table-striped
          %thead
            %tr
              %td File Name
              %td Created At (dd/mm/yyyy)
          %tbody
            - current_user.file_uploads.each do |file|
              %tr
                %td
                  = link_to file.name, file_upload_path(file)
                %td= file.created_at.strftime("%d/%m/%Y")
